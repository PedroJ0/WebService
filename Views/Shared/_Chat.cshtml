<style>

    div.panel-primary {
        margin-right: 50px;
        width: 300px;
        border: 1px solid #0094ff;
        position: absolute;
        right: 0;
        bottom: 0;

    }

    div.panel-body {
        min-height: 200px;
    }

    div.panel-heading {
        cursor: pointer;
    }

    textarea {
        margin: 0px 12px;
    }

    div.chatMessages {
        overflow-y:auto;
        height: 250px;
        margin-bottom: 10px;
    }

    .user-sms {
        margin-top: 15px;
        background-color: #74b9ff;
        padding: 5px;
        word-wrap: break-word;
        max-width: 90%
    }

    .admin-sms {
        margin-top: 10px;
        background-color: #b2bec3;
        padding: 5px;
