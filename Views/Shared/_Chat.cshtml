<div class="content">
    <div class="panel panel-primary">

        <div class="panel-heading" data-toggle="collapse" data-target="#chat">
            <i class="glyphicon glyphicon-comment"></i> Clique aqui
        </div>

        <div class="panel-body collapse" id="chat">
            <div class="">

                <div class="chatMessages" >
                    <div class="col-md-12">
                        <p class="user-sms pull-left">
                            Olá como posso ajudar?
                        </p>
                    </div>

                    <div class="col-md-12">
                        <p class="admin-sms pull-right">
                            Olá como vai?
                        </p>
                    </div>
                                       
                </div>

                <div class="messageSend">
                    <form class="form" >
                        <div class="form-inline">

                            <div class="row">

                                <textarea class="form-control" id="message" placeholder="Message" required></textarea>
                                <button class="form-control btn btn-primary" id="send" type="button">Enviar</button>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>